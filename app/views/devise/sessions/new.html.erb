<div class="container">
  <div class="col-lg-6 col-lg-offset-3">
    <br /><br /><br /><br />
    <div class="page-header">
      <h1>Welcome to Sellacious Cloud Account</h1>
    </div>
    
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-horizontal'}) do |f| %>
      <fieldset>
        <div class="form-group">
          <label class="col-md-2 control-label">Email</label>
          <div class="col-md-10">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: 'Email' %>
          </div>
        </div>
        <div class="form-group">
          <label class="col-md-2 control-label">Password</label>
          <div class="col-md-10">
            <%= f.password_field :password, autocomplete: "current-password", class: 'form-control', placeholder: 'Password' %>
          </div>
        </div>
    
        <div class="actions">
          <%= f.submit "Log in", class: 'btn btn-primary pull-right' %>
        </div>
      </fieldset>
    <% end %>
    <br />
    <%= render "devise/shared/links" %>
  </div>
</div> 
