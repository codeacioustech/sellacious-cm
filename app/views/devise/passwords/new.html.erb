<div class="container">
  <div class="col-lg-6 col-lg-offset-1">
    <br /><br /><br /><br />
    <div class="page-header">
      <h1 style="font-size: 34px; text-align: center;">Forgot your password?</h1>
    </div>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {class: 'form-horizontal'}) do |f| %>
      <fieldset>
        <div class="form-group">
          <label class="col-md-2 control-label">Email</label>
          <div class="col-md-10">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: 'Email' %>
          </div>
        </div>
        
    
        <div class="actions">
          <%= f.submit "Send me reset password instructions", class: 'btn btn-primary pull-right' %>
        </div>
      </fieldset>
    <% end %>
    <br />
    <%= render "devise/shared/links" %>
  </div>
</div> 